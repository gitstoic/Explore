<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<LinearLayout
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/Backbtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="30dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_baseline_arrow_back_24"
         />


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:hint="Search for book"
        app:boxCornerRadiusBottomEnd="25dp"
        app:boxCornerRadiusBottomStart="25dp"
        app:boxCornerRadiusTopEnd="25dp"
        app:boxCornerRadiusTopStart="25dp"
        app:boxStrokeColor="@color/black"
        app:boxStrokeWidth="2dp"
        app:startIconDrawable="@drawable/ic_baseline_search">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchbar"
            android:layout_width="289dp"
            android:layout_height="34dp"
            android:fontFamily="@font/roboto_regular"
            android:inputType="textEmailAddress"
            android:textColorHint="#C4C4C4"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="43dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Search Results"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/book_cover"
        android:layout_width="208dp"
        android:layout_height="286dp"
        android:layout_marginTop="84dp"
        android:src="@drawable/the_gate_ghost_book_cover"
        app:layout_constraintEnd_toEndOf="@id/relativeLayout"
        app:layout_constraintStart_toStartOf="@id/relativeLayout"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_bold"
        android:text="The Gate Ghost"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@id/book_cover"
        app:layout_constraintStart_toStartOf="@id/book_cover"
        app:layout_constraintTop_toBottomOf="@id/book_cover" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="Kenny Bright"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@id/book_cover"
        app:layout_constraintStart_toStartOf="@id/book_cover"
        app:layout_constraintTop_toBottomOf="@id/book_cover"
        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Venenatis amet semper ac ultricies. Turpis et, egestas bibendum tempus sed in nulla nisi"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="@id/book_cover"
        app:layout_constraintStart_toStartOf="@id/book_cover"
        app:layout_constraintTop_toBottomOf="@id/book_cover"
        />



    <LinearLayout
        android:id="@+id/available_dowl_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:visibility="invisible"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/book_cover"
        app:layout_constraintStart_toStartOf="@id/book_cover"
        app:layout_constraintTop_toBottomOf="@id/book_cover">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/download_ic" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Download Epub"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#2C59CC" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/unavailable_dowl_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:visibility="visible"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/book_cover"
        app:layout_constraintStart_toStartOf="@id/book_cover"
        app:layout_constraintTop_toBottomOf="@id/book_cover">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/download_ic"
            app:tint="#C1C1C1"
            />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Download Epub"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#C1C1C1" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Unavailable"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#666666" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="218dp"
        android:visibility="visible"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/book_cover"
        app:layout_constraintStart_toStartOf="@id/book_cover"
        app:layout_constraintTop_toBottomOf="@id/book_cover">


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:text="You can get hard copy at"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#666666"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:textAlignment="textStart"
        android:text="Safe Haven Library"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#2C59CC" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bookLibrary_address"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAlignment="textStart"
        android:text="2, Aladelola Street, Ikosi, Ketu, Lagos State."
        android:textSize="16sp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="#666666"/>

</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>