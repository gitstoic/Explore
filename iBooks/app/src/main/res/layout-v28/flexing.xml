        app:layout_constraintStart_toEndOf="@id/ic_clipboard_check"
        app:layout_constraintTop_toTopOf="@id/ic_clipboard_check"
        app:layout_constraintBottom_toBottomOf="@id/ic_clipboard_check"
        />

