        app:boxStrokeWidth="2dp"
        android:layout_marginStart="20dp"
        app:hintTextColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/ic_timer"
        app:layout_constraintBottom_toBottomOf="@id/ic_timer"
        app:layout_constraintTop_toTopOf="@id/ic_timer">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/timestart_digit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16dp"
            android:textFontWeight="400"
            android:inputType="time"
            android:textColorHint="#666666"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ic_hyphen"
        android:src="@drawable/ic_hyphen"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        app:tint="@color/black"
        app:layout_constraintStart_toEndOf="@id/time_start"
        app:layout_constraintTop_toTopOf="@id/time_start"
        app:layout_constraintBottom_toBottomOf="@id/time_start"
        />


