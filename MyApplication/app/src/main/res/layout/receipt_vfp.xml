<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
android:gravity="center_horizontal"    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/receipt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="RECEIPT"
        android:textAlignment="center"
        android:fontFamily="@font/lato_bold"
        android:textFontWeight="600"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textAllCaps="true"
        android:layout_marginTop="64dp">
    </TextView>

    <TextView
        android:id="@+id/president_elect"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="2022 Presidential Elections
INEC NIGERIA"
        android:textAlignment="center"
        android:fontFamily="@font/lato_bold"
        android:textFontWeight="500"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginTop="28dp">
    </TextView>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/grouped_kodevote_logo">
        </ImageView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lga_constr"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:background="#000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:text="Voter's Name"
                android:clickable="true"
                android:focusable="true"
                android:textAllCaps="false"
                android:fontFamily="@font/lato_regular"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:textSize="12dp"
                />
            <TextView
                android:text="Ihiechi Ikeys"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/lato_regular"
                android:layout_marginTop="8dp"
                android:textSize="16dp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hoa_constr"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:background="#000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:text="Preferred Candidate"
                android:clickable="true"
                android:focusable="true"
                android:textAllCaps="false"
                android:fontFamily="@font/lato_regular"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:textSize="12dp"/>

            <TextView
                android:text="Aminat Danjuma"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/lato_regular"
                android:textSize="16dp"
                android:textColor="@color/black"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sen_constr"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:background="#000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:text="Reference number"
                android:clickable="true"
                android:focusable="true"
                android:textAllCaps="false"
                android:fontFamily="@font/lato_regular"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:textSize="12dp"/>
            <TextView
                android:text="A123B456"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/lato_regular"
                android:textSize="16dp"
                android:textColor="@color/black"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hor_constr"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:background="#000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:text="Date &amp; Time"
                android:clickable="true"
                android:focusable="true"
                android:textAllCaps="false"
                android:fontFamily="@font/lato_regular"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:textSize="12dp"/>
            <TextView
                android:text="24/02/2022"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/lato_regular"
                android:textSize="16dp"
                android:textColor="@color/black"/>
            <TextView
                android:text="10:30am"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/lato_regular"
                android:layout_marginTop="8dp"
                android:textSize="16dp"
                />

        </LinearLayout>


        <View
            android:background="#000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </androidx.constraintlayout.widget.ConstraintLayout>






    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_btn"
        android:layout_width="327dp"
        android:layout_height="48dp"
        android:backgroundTint="#009900"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato_regular"
        android:text="BACK TO HOME SCREEN"
        android:textAllCaps="true"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        />
</LinearLayout>

