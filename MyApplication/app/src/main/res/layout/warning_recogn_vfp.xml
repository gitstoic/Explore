<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/votefp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote For Presidency"
        android:fontFamily="@font/lato_bold"
        android:textFontWeight="600"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:layout_marginStart="14dp"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
    </TextView>

    <LinearLayout
        android:id="@+id/constraintlay"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/votefp"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:layout_width="327dp"
            android:layout_height="82dp"
            android:src="@drawable/votingscreen_tab3">
        </ImageView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="48dp"
            >
        <ImageView
            android:id="@+id/lplogo"
            android:layout_width="31dp"
            android:layout_height="26dp"
            android:src="@drawable/lp_logo"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pfp_layout">
        </ImageView>

            <RelativeLayout
                android:id="@+id/pfp_layout"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="130dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/pfp_border"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="75.5dp">

                    <ImageView
                        android:id="@+id/candidate_pfp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/aminat_danjuma" />

                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/candidate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aminat Danjuma"
            android:fontFamily="lato"
            android:textFontWeight="500"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginTop="16dp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="#CCEBCC"
        android:background="@drawable/warning_txt_border"
        app:layout_constraintStart_toStartOf="@id/constraintlay"
        app:layout_constraintEnd_toEndOf="@id/constraintlay"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:text="Warning!"
        android:textColor="#FD0404"
        android:textAllCaps="false"
        android:textFontWeight="600"
        android:textSize="24sp"
        />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            >
    <TextView
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/black"
        android:text="Are you sure you want to vote for this candidate? Once confirmed this action cannot be reversed"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textFontWeight="400"
        android:textSize="20sp"
        />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.google.android.material.button.MaterialButton
        android:id="@+id/confirm_btn"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:backgroundTint="#009900"
        android:layout_weight="600"
        android:fontFamily="@font/lato_regular"
        android:layout_marginEnd="16dp"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_btn"
            android:layout_width="145dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/lato_regular"
            app:strokeColor="#FD0404"
            app:strokeWidth="3dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#FD0404"
            android:textSize="16sp"
            app:cornerRadius="8dp" />
</LinearLayout>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

