<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facial Verification"
        android:fontFamily="lato"
        android:textFontWeight="600"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:layout_marginStart="24dp"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
    </TextView>

    <TextView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="We use your selfie to compare with the photo in your PVC"
        android:fontFamily="lato"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:layout_marginStart="26dp"
        android:layout_marginTop="141dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
    </TextView>




        <ImageView
            android:layout_width="189dp"
            android:layout_height="189dp"
            android:layout_marginBottom="275dp"
            android:src="@drawable/bot_facialrecognition"
            app:layout_constraintBottom_toTopOf="@id/open_cam"
            app:layout_constraintStart_toStartOf="@id/open_cam"
            app:layout_constraintEnd_toEndOf="@id/open_cam"
            >
        </ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.  Good Lighting"
            android:fontFamily="lato"
            android:textFontWeight="600"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="240dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/open_cam"
            >
        </TextView>

    <TextView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Make sure you are in a well lit area and
both ears are uncovered  "
        android:fontFamily="lato"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/open_cam"
        >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.  Look Straight"
        android:fontFamily="lato"
        android:textFontWeight="600"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="136dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/open_cam"

        >
    </TextView>

    <TextView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Hold your phone at eye level and look
straight to the camera"
        android:fontFamily="lato"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/open_cam"

        >
    </TextView>








    <com.google.android.material.button.MaterialButton
        android:id="@+id/open_cam"
        android:layout_width="327dp"
        android:layout_height="48dp"
        android:layout_marginBottom="46dp"
        android:layout_marginStart="36.5dp"
        android:backgroundTint="#009900"
        android:layout_weight="600"
        android:fontFamily="lato"
        android:text="Open Camera"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

