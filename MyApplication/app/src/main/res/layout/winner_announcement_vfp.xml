<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/winner_announcement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Winner Announcement"
        android:fontFamily="@font/lato_bold"
        android:textFontWeight="600"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:layout_marginStart="14dp"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
    </TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlay"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/winner_announcement"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="31dp"
            android:layout_height="26dp"
            android:src="@drawable/lp_logo"
            app:layout_constraintTop_toTopOf="@id/constraintlay"
            app:layout_constraintEnd_toStartOf="@id/candidate_pfp"
            android:layout_marginEnd="2dp">
        </ImageView>
        <ImageView
            android:id="@+id/candidate_pfp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="100dp"
            android:src="@drawable/aminat_danjuma"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/constraintlay">
        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/announcement_logo"
            app:layout_constraintStart_toStartOf="@id/back_btn"
            app:layout_constraintEnd_toEndOf="@id/back_btn"
            app:layout_constraintBottom_toTopOf="@id/back_btn"
            android:layout_marginBottom="165dp">
        </ImageView>


        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Aminat Danjuma of Labour Party, having satisfied the requirements of the law and scored the highest number of votes, is hereby declared winner of the 2022 Presidential election."
            android:fontFamily="@font/lato_regular"
            android:textFontWeight="400"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="@id/back_btn"
            app:layout_constraintEnd_toEndOf="@id/back_btn"
            app:layout_constraintBottom_toTopOf="@id/back_btn"
            android:layout_marginBottom="55dp"
            >
        </TextView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_btn"
        android:layout_width="327dp"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#009900"
        android:layout_weight="600"
        android:fontFamily="@font/lato_regular"
        android:text="BACK TO HOME SCREEN"
        android:textAllCaps="true"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@id/constraintlay"
        app:layout_constraintEnd_toEndOf="@id/constraintlay"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

