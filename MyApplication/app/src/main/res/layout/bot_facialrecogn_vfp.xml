<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/votefp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote For Presidency"
        android:fontFamily="@font/lato_bold"
        android:textFontWeight="600"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:layout_marginStart="14dp"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
    </TextView>

    <LinearLayout
        android:id="@+id/constraintlay"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/votefp"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:layout_width="327dp"
            android:layout_height="82dp"
            android:src="@drawable/votingscreen_tab2">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facial Recognition"
            android:fontFamily="@font/lato_bold"
            android:textFontWeight="600"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginTop="29dp">
        </TextView>

        <ImageView
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/bot_facialrecognition">
        </ImageView>


        <TextView
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:text="To ensure that it is you who is making this
request, we will like to capture your face."
            android:fontFamily="@font/lato_regular"
            android:textFontWeight="400"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:layout_marginTop="29dp">
        </TextView>
    </LinearLayout>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/cntinue"
        android:layout_width="327dp"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#7BB274"
        android:layout_weight="600"
        android:fontFamily="@font/lato"
        android:text="Continue"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@id/constraintlay"
        app:layout_constraintEnd_toEndOf="@id/constraintlay"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

