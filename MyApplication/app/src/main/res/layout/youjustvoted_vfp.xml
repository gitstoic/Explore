<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/votefp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote For Presidency"
        android:fontFamily="@font/lato_bold"
        android:textFontWeight="600"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:layout_marginStart="14dp"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
    </TextView>

    <LinearLayout
        android:id="@+id/constraintlay"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/votefp"
        app:layout_constraintStart_toStartOf="parent">






        <ImageView
            android:layout_width="300dp"
            android:layout_height="235dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/announcement_winner">
        </ImageView>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/warning_txt_border"
        android:layout_marginTop="69dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOU JUST VOTED!"
            android:fontFamily="@font/lato_bold"
            android:textFontWeight="500"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:layout_marginTop="16dp"
            >
        </TextView>

        <TextView
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="There are no ongoing elections.
We will send you a notification
for the next election."
            android:fontFamily="@font/lato_regular"
            android:textFontWeight="400"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:layout_marginStart="53dp"
            android:layout_marginEnd="53dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="26dp">
        </TextView>
    </LinearLayout>
    </LinearLayout>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/see_receipt"
        android:layout_width="327dp"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#009900"
        android:layout_weight="600"
        android:fontFamily="@font/lato_regular"
        android:text="SEE THE RECEIPT"
        android:textAllCaps="true"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@id/constraintlay"
        app:layout_constraintEnd_toEndOf="@id/constraintlay"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

