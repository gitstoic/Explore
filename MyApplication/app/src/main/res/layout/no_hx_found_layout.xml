<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/votefp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voting History"
        android:fontFamily="@font/lato_bold"
        android:textFontWeight="600"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:layout_marginStart="14dp"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
    </TextView>

    <LinearLayout
        android:id="@+id/constraintlay"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/votefp"
        app:layout_constraintStart_toStartOf="parent">


    <ImageView
        android:id="@+id/image_votinghx"
        android:layout_width="327dp"
        android:layout_height="343dp"
        android:src="@drawable/votinghx_icon"
        >
    </ImageView>

        <TextView
            android:id="@+id/no_hx_found"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lato_bold"
            android:text="No history found"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textFontWeight="500"
            android:textSize="20sp"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seems like you havenâ€™t voted in any elections yet"
        android:fontFamily="@font/lato_regular"
        android:textSize="14sp"
        android:textFontWeight="500"
        android:textAllCaps="false"
        android:layout_marginTop="16dp">
    </TextView>


</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

